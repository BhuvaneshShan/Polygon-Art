<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:cropToPadding="true"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/polygon_art_logo_2" />


    <Button
        android:id="@+id/newFileButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/polygonArtLightBlue"
        android:fontFamily="monospace"
        android:text="New Canvas"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/howToButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/polygonArtLightBlue"
        android:fontFamily="monospace"
        android:text="How To"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:typeface="normal" />
<!--
    <Button
        android:id="@+id/galleryButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/polygonArtLightBlue"
        android:fontFamily="monospace"
        android:text="Gallery"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:typeface="normal" />
    </LinearLayout>-->

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Version 1.1"
        android:textAlignment="center"
        android:textColor="@color/polygonArtBlue"
        android:textSize="10sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif"
        android:text="Email : polygon.art.app@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/polygonArtBlue"
        android:textSize="10sp"
        android:typeface="normal" />

</LinearLayout>